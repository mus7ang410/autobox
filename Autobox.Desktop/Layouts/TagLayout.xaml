<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Autobox.Desktop.Layouts">

    <Style x:Key="TagButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LightColor}"/>
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
        <Setter Property="Margin" Value="0, 0, 4, 4" />
    </Style>
    
</ResourceDictionary>