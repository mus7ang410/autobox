<UserControl x:Class="Autobox.Desktop.Activities.Controls.TrackPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autobox.Desktop.Activities.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LayoutGrid">
        <Rectangle Panel.ZIndex="-2" Fill="Black"></Rectangle>
        <Image x:Name="ThumbnailImage" Panel.ZIndex="-1"/>
        <MediaElement x:Name="MediaPlayer" LoadedBehavior="Manual"/>
    </Grid>
</UserControl>
