<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autobox.Desktop.Activities"
             xmlns:Controls="clr-namespace:Autobox.Desktop.Activities.Controls" x:Class="Autobox.Desktop.Activities.ActivityManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="LayoutGrid" Background="{StaticResource Color.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource H1.GridLength}"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Separator Width="{StaticResource H2.Double}" Background="Transparent"/>
            <Button x:Name="PlayerButton" Style="{StaticResource Button.Menu.H1}" Content="PLAYER" Click="RibbonButton_Click"/>
            <Separator Width="{StaticResource H2.Double}" Background="Transparent"/>
            <Button x:Name="LibraryButton" Style="{StaticResource Button.Menu.H1}" Content="MY MUSIC" Click="RibbonButton_Click"/>
            <Separator Background="{x:Null}"/>
        </StackPanel>
    </Grid>
</UserControl>
