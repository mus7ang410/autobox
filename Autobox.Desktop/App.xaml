<Application x:Class="Autobox.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Autobox.Desktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Layouts/CommonLayout.xaml"/>
                <ResourceDictionary Source="Layouts/RibbonLayout.xaml"/>
                <ResourceDictionary Source="Layouts/TagLayout.xaml"/>
                <ResourceDictionary Source="Layouts/CardLayout.xaml"/>
                <ResourceDictionary Source="Layouts/InputLayout.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
